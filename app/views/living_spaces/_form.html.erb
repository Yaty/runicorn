<%= simple_form_for living_space do |form| %>
    <%= form.input :name, label: 'Nom du lieu de vie', error: 'Champ obligatoire' %>
    <%= form.input :latitude, label: 'Latitude', error: 'Champ obligatoire' %>
    <%= form.input :longitude, label: 'Longitude', error: 'Champ obligatoire' %>
    <%= form.input :width, label: 'Largeur', error: 'Champ obligatoire' %>
    <%= form.input :height, label: 'Hauteur', error: 'Champ obligatoire' %>
    <%= form.button :submit %>
<% end %>